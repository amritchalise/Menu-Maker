

@model MenuMaker_Calculator.Models.CalculatorModel

@{
    ViewBag.Title = "Calculator";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculator</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f5f5f5;
        }

        .calculator {
            background-color: #f0f0f0;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 300px;
        }

        .display {
            background-color: #eaeaea;
            border-radius: 5px;
            font-size: 24px;
            padding: 10px;
            text-align: right;
            margin-bottom: 10px;
        }

        .buttons {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-gap: 10px;
        }

        button {
            background-color: #d8d8d8;
            border: none;
            border-radius: 5px;
            color: #333;
            cursor: pointer;
            font-size: 18px;
            padding: 15px 0;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #bfbfbf;
            }

        .clear {
            grid-column: span 2;
            background-color: #f0f0f0;
        }

        .equal, .backspace, .ans, .clear {
            grid-column: span 2;
            background-color: #ffa500;
            color: #fff;
        }

        .operation {
            background-color: #f0f0f0;
        }

            .operation:hover {
                background-color: #d9d9d9;
            }

        .decimal {
            grid-column: span 1;
        }
        .display {
            background-color: #eaeaea;
            border-radius: 5px;
            padding: 15px 10px; /* Increased padding for the expression line */
            text-align: right;
            margin-bottom: 10px;
            border: 2px solid #ccc; /* Add a border for differentiation */
        }

        .result {
            font-size: 24px; /* Same font size as the expression line */
            padding: 10px; /* Same padding as the expression line */
            background-color: #f9f9f9; /* Different background color for the result */
            display: block; /* Ensure the result is displayed as a block element */
            border-top: 2px solid #ccc; /* Add a top border to separate from the expression */
        }

    </style>
</head>
<body>
    <form asp-controller="Home" asp-action="calculate" method="post">
        <div class="calculator">
            <div class="display">
                <input type="hidden" name="currentExpression" value="@Model.CurrentExpression" readonly>
                <span class="expression">@Model.CurrentExpression</span><br />

                <input type="hidden" name="result" value="@Model.Calresult" readonly>
                <span class="result">@Model.Calresult</span>
            </div>
            <div class="buttons">
                <button name="input" value="7" class="digit">7</button>
                <button name="input" value="8" class="digit">8</button>
                <button name="input" value="9" class="digit">9</button>
                <button name="input" value="/" class="operation">÷</button>
                <button name="input" value="4" class="digit">4</button>
                <button name="input" value="5" class="digit">5</button>
                <button name="input" value="6" class="digit">6</button>
                <button name="input" value="*" class="operation">×</button>
                <button name="input" value="1" class="digit">1</button>
                <button name="input" value="2" class="digit">2</button>
                <button name="input" value="3" class="digit">3</button>
                <button name="input" value="-" class="operation">-</button>
                <button name="input" value="0" class="digit">0</button>
                <button name="input" value="." class="decimal">.</button>
                <button name="input" value="%" class="operation">%</button>
                <button name="input" value="+" class="operation">+</button>
                <button type="submit" name="action" value="Calculate" class="equal">=</button>
                <button type="submit" name="action" value="Ans" class="ans">ANS</button>

                <button type="submit" name="action" value="Clear" class="clear">AC</button>
                <button type="submit" name="action" value="Backspace" class="backspace"><i class="fas fa-backspace"></i></button>

            </div>
        </div>
    </form>
</body>
</html>





